<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <filter>
        <filter-name>login</filter-name>
        <filter-class>servlets.filters.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>login</filter-name>
        <url-pattern>/index.jsp</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>patient_page</filter-name>
        <filter-class>servlets.filters.PatientFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>patient_page</filter-name>
        <url-pattern>/patient_main</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>admin_page</filter-name>
        <filter-class>servlets.filters.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>admin_page</filter-name>
        <url-pattern>/admin_main</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>doctor_page</filter-name>
        <filter-class>servlets.filters.DoctorFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>doctor_page</filter-name>
        <url-pattern>/doctor_main</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>
            LoginServlet
        </servlet-name>
        <servlet-class>
            servlets.LoginServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/index.jsp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>
            RegisterServlet
        </servlet-name>
        <servlet-class>
            servlets.RegisterServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>servlets.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>servlets.admin_servlets.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin_main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PatientServlet</servlet-name>
        <servlet-class>servlets.patient_servlets.PatientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatientServlet</servlet-name>
        <url-pattern>/patient_main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DoctorServlet</servlet-name>
        <servlet-class>servlets.DoctorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoctorServlet</servlet-name>
        <url-pattern>/doctor_main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>
            AdminGetAllPatientsServlet
        </servlet-name>
        <servlet-class>
            servlets.admin_servlets.AdminGetAllPatientsServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminGetAllPatientsServlet</servlet-name>
        <url-pattern>/patient_list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>
            AdminGetAllUsersServlet
        </servlet-name>
        <servlet-class>
            servlets.admin_servlets.AdminGetAllUsersServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminGetAllUsersServlet</servlet-name>
        <url-pattern>/user_list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>
            AdminGetAllDoctorsServlet
        </servlet-name>
        <servlet-class>
            servlets.admin_servlets.AdminGetAllDoctorsServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminGetAllDoctorsServlet</servlet-name>
        <url-pattern>/doctor_list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>
            AdminGetScheduleServlet
        </servlet-name>
        <servlet-class>
            servlets.admin_servlets.AdminGetScheduleServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminGetScheduleServlet</servlet-name>
        <url-pattern>/doctor_schedule</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminGetMedcentersServlet</servlet-name>
        <servlet-class>servlets.admin_servlets.AdminGetMedcentersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminGetMedcentersServlet</servlet-name>
        <url-pattern>/medcenters</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminGetTicketsServlet</servlet-name>
        <servlet-class>servlets.admin_servlets.AdminGetTicketsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminGetTicketsServlet</servlet-name>
        <url-pattern>/ticket_list</url-pattern>
    </servlet-mapping>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
</web-app>