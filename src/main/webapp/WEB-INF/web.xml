<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!--filters-->
    <filter>
        <filter-name>login</filter-name>
        <filter-class>servlets.filters.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>login</filter-name>
        <url-pattern>/index.jsp</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>patient_page</filter-name>
        <filter-class>servlets.filters.PatientFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>patient_page</filter-name>
        <url-pattern>/patient_main</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>admin_page</filter-name>
        <filter-class>servlets.filters.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>admin_page</filter-name>
        <url-pattern>/admin_main</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>doctor_page</filter-name>
        <filter-class>servlets.filters.DoctorFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>doctor_page</filter-name>
        <url-pattern>/doctor_main</url-pattern>
    </filter-mapping>

    <!--servlets-->
    <servlet>
        <servlet-name>
            LoginServlet
        </servlet-name>
        <servlet-class>
            servlets.authorization_servlets.LoginServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/index.jsp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>
            RegisterServlet
        </servlet-name>
        <servlet-class>
            servlets.registration_servlet.RegisterServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>servlets.authorization_servlets.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>

    <!--Admin servlets-->
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>servlets.admin_servlets.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin_main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>
            AdminGetAllPatientsServlet
        </servlet-name>
        <servlet-class>
            servlets.admin_servlets.AdminGetAllPatientsServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminGetAllPatientsServlet</servlet-name>
        <url-pattern>/patient_list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>
            AdminGetAllUsersServlet
        </servlet-name>
        <servlet-class>
            servlets.admin_servlets.AdminGetAllUsersServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminGetAllUsersServlet</servlet-name>
        <url-pattern>/user_list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>
            AdminGetAllDoctorsServlet
        </servlet-name>
        <servlet-class>
            servlets.admin_servlets.AdminGetAllDoctorsServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminGetAllDoctorsServlet</servlet-name>
        <url-pattern>/doctor_list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>
            AdminGetScheduleServlet
        </servlet-name>
        <servlet-class>
            servlets.admin_servlets.AdminGetScheduleServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminGetScheduleServlet</servlet-name>
        <url-pattern>/doctor_schedule</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminGetMedcentersServlet</servlet-name>
        <servlet-class>servlets.admin_servlets.AdminGetMedcentersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminGetMedcentersServlet</servlet-name>
        <url-pattern>/medcenters</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminGetTicketsServlet</servlet-name>
        <servlet-class>servlets.admin_servlets.AdminGetTicketsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminGetTicketsServlet</servlet-name>
        <url-pattern>/ticket_list</url-pattern>
    </servlet-mapping>

    <!--Doctor servlets-->
    <servlet>
        <servlet-name>DoctorServlet</servlet-name>
        <servlet-class>servlets.doctor_servlets.DoctorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoctorServlet</servlet-name>
        <url-pattern>/doctor_main</url-pattern>
    </servlet-mapping>

    <!--Patient servlets-->
    <servlet>
        <servlet-name>PatientServlet</servlet-name>
        <servlet-class>servlets.patient_servlets.PatientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatientServlet</servlet-name>
        <url-pattern>/patient_main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PatientGetDoctorListServlet</servlet-name>
        <servlet-class>servlets.patient_servlets.PatientGetDoctorListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatientGetDoctorListServlet</servlet-name>
        <url-pattern>/patient_doctor_list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PatientGetTicketServlet</servlet-name>
        <servlet-class>servlets.patient_servlets.PatientGetTicketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatientGetTicketServlet</servlet-name>
        <url-pattern>/patient_new_ticket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PatientGetDoctorScheduleServlet</servlet-name>
        <servlet-class>servlets.patient_servlets.PatientGetDoctorScheduleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatientGetDoctorScheduleServlet</servlet-name>
        <url-pattern>/patient_doctor_schedule_2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PatientDoctorScheduleServlet</servlet-name>
        <servlet-class>servlets.patient_servlets.PatientDoctorScheduleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatientDoctorScheduleServlet</servlet-name>
        <url-pattern>/patient_doctor_schedule</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PatientTicketListServlet</servlet-name>
        <servlet-class>servlets.patient_servlets.PatientTicketListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatientTicketListServlet</servlet-name>
        <url-pattern>/patient_ticket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PatientMedCenterServlet</servlet-name>
        <servlet-class>servlets.patient_servlets.PatientMedCenterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatientMedCenterServlet</servlet-name>
        <url-pattern>/patient_medcenter</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PatientEditServlet</servlet-name>
        <servlet-class>servlets.patient_servlets.PatientEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatientEditServlet</servlet-name>
        <url-pattern>/patient_edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PatientSaveServlet</servlet-name>
        <servlet-class>servlets.patient_servlets.PatientSaveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatientSaveServlet</servlet-name>
        <url-pattern>/patient_save</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PatientDataServlet</servlet-name>
        <servlet-class>servlets.patient_servlets.PatientDataServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatientDataServlet</servlet-name>
        <url-pattern>/patient_data</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PatientInfoServlet</servlet-name>
        <servlet-class>servlets.patient_servlets.PatientInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatientInfoServlet</servlet-name>
        <url-pattern>/patient_info</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TicketSpecializationServlet</servlet-name>
        <servlet-class>servlets.patient_servlets.patient_ticket_servlets.TicketSpecializationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TicketSpecializationServlet</servlet-name>
        <url-pattern>/ticket_specialization</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TicketDoctorServlet</servlet-name>
        <servlet-class>servlets.patient_servlets.patient_ticket_servlets.TicketDoctorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TicketDoctorServlet</servlet-name>
        <url-pattern>/ticket_doctor</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TicketDateTimeServlet</servlet-name>
        <servlet-class>servlets.patient_servlets.patient_ticket_servlets.TicketDateTimeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TicketDateTimeServlet</servlet-name>
        <url-pattern>/ticket_date_time</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TicketServlet</servlet-name>
        <servlet-class>servlets.patient_servlets.patient_ticket_servlets.TicketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TicketServlet</servlet-name>
        <url-pattern>/get_ticket</url-pattern>
    </servlet-mapping>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
</web-app>